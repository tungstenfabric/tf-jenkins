declare -A RHOSP_PROVIDERS=( \
  ['vexxhost']='vexx' \
  ['vexx']='vexx' \
  ['bmc']='bmc' \
  ['kvm']='kvm' \
)

export PROVIDER="${RHOSP_PROVIDERS[$CLOUD]}"
